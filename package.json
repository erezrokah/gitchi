{
  "name": "gitchi",
  "version": "0.0.1",
  "description": "Turn GitHub Pull Request Comments into a Chat",
  "private": true,
  "scripts": {
    "watch": "yarn clean && webpack --config webpack/webpack.dev.js --watch",
    "build": "yarn clean && webpack --config webpack/webpack.prod.js",
    "clean": "rimraf dist",
    "deploy": "cd src/backend/ && serverless deploy",
    "remove": "cd src/backend/ && serverless remove",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "JEST_JUNIT_OUTPUT_DIR=./reports/junit JEST_JUNIT_OUTPUT_NAME=${npm_package_name}-test-results.xml jest --runInBand --ci",
    "coverage": "jest --coverage",
    "lint": "run-p lint:js lint:css",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx .",
    "lint:css": "stylelint 'src/**/*.tsx' 'public/**/*.css'",
    "prettier": "prettier --write \"{src,backend}/**/*.{js,jsx,ts,scss}\" *.js",
    "prettier:ci": "prettier --list-different \"{src,backend}/**/*.{js,jsx,ts,scss}\" *.js",
    "package": "cd dist && mkdir -p ../package && zip -r ../package/${npm_package_name}.${npm_package_version}.zip .",
    "circleci:setup": "node .circleci/circleci.js setup",
    "circleci:remove": "node .circleci/circleci.js remove",
    "tag": "git tag -a \"v$npm_package_version\" -m \"Releasing version v$npm_package_version\" && git push --tags"
  },
  "author": "Erez Rokah (erez@erezro.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/erezrokah/gitchi.git"
  },
  "dependencies": {
    "crypto-random-string": "^3.0.1",
    "date-fns": "^2.0.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.0",
    "styled-components": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/aws-lambda": "^8.10.31",
    "@types/chrome": "0.0.86",
    "@types/jest": "^24.0.18",
    "@types/jquery": "^3.3.30",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/simple-oauth2": "^2.2.1",
    "@types/styled-components": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "aws-sdk": "^2.521.0",
    "axios": "^0.19.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.2.0",
    "dotenv": "^8.1.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jest-junit": "^8.0.0",
    "js-yaml": "^3.13.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "serverless-iam-roles-per-function": "^2.0.1",
    "serverless-pseudo-parameters": "^2.4.0",
    "serverless-scriptable-plugin": "^1.0.3",
    "serverless-webpack": "^5.3.1",
    "simple-oauth2": "^2.2.1",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "~3.4.5",
    "url-loader": "^2.1.0",
    "webpack": "~4.17.2",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "~3.1.0",
    "webpack-merge": "~4.2.1",
    "yargs": "^14.0.0"
  }
}
