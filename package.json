{
  "name": "gitchi",
  "version": "0.0.1",
  "description": "Turns GitHub Pull Request Comments into a Chat",
  "private": true,
  "scripts": {
    "watch": "yarn clean && webpack --config webpack/webpack.dev.js --watch",
    "build": "yarn clean && webpack --config webpack/webpack.prod.js",
    "clean": "rimraf dist",
    "test": "jest",
    "lint:all": "run-p lint:js lint:css",
    "lint:js": "eslint 'src/**/*.ts'",
    "lint:css": "stylelint 'src/**/*.tsx' 'public/**/*.css'",
    "prettier": "prettier --write 'src/**/*.ts' 'webpack/**/*.js'",
    "prettier:ci": "prettier --list-different 'src/**/*.ts' 'webpack/**/*.js'"
  },
  "author": "Erez Rokah (erez@erezro.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/erezrokah/gitchi.git"
  },
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.0",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@types/chrome": "0.0.86",
    "@types/jquery": "^3.3.30",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^3.2.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "ts-loader": "^6.0.4",
    "typescript": "~3.4.5",
    "url-loader": "^2.1.0",
    "webpack": "~4.17.2",
    "webpack-cli": "~3.1.0",
    "webpack-merge": "~4.2.1"
  }
}
